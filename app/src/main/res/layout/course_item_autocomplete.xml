<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    style="@style/item_autocomplete">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        style="@style/item_autocomplete_style"
        android:id="@+id/courseAutocompleteTextView"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - "
        style="@style/item_autocomplete_style"
        android:id="@+id/textView3"
        android:layout_gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        style="@style/item_autocomplete_style_tiny"
        android:id="@+id/degreeAutocompleteTextView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/courseAutocompleteTextView"
        android:layout_gravity="center_vertical" />
</LinearLayout>